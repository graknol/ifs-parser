<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>net6.0;net7.0;net8.0</TargetFrameworks>
    <LangVersion>latest</LangVersion>
    <PackageId>TreeSitter.PlSqlIfs</PackageId>
    <Version>0.1.0</Version>
    <Authors>Sindre van der Linden</Authors>
    <Description>IFS Cloud PL/SQL Tree-sitter parser for .NET</Description>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <RepositoryUrl>https://github.com/graknol/ifs-parser</RepositoryUrl>
    <PackageTags>tree-sitter;plsql;ifs;parser;grammar</PackageTags>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="TreeSitterSharp" Version="0.5.0" />
  </ItemGroup>

  <ItemGroup>
    <None Include="../../src/parser.c">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
    <None Include="../../src/scanner.c">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
  </ItemGroup>

</Project>
